int stringReplaceText( string& s, string& f, string& t )
{
    int ch = 0, p = -1;
    while( ( p = findFirst( s, f ) ) >= 0 )
    {
        s = substring( s, 0, p ) + t + substring( s, p + f.length(), s.length() - ( p + f.length() ) );
        ch++;
    }
    return ( ch );
}

