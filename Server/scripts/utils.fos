}

void VerboseAction( Critter& cr, Critter& target, string& text )
{
    if( text.length() > 0 )
    {
        stringReplaceText( text, "TARGET", GetCritterName( target ) );
        VerboseAction( cr, text );
    }
}

string GetIP( uint ip )
{
    if( ip > 0 )
    {
        string result = "";
        for( uint i = 0; i < 4; i++ )
        {
            result += ( i == 0 ? "" : "." ) + ( ( ip >> ( i * 8 ) ) & 0xFF );
        }
        return result;
    }
    return "unknown ip";
}

