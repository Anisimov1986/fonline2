void Ress( Critter& cr )
{
    if( cr.IsDead() )
        cr.ToLife();
    cr.StatBase[ ST_CURRENT_HP ] = cr.Stat[ ST_MAX_LIFE ];
    cr.RefreshVisible();
    cr.TimeoutBase[ TO_REPLICATION ] = 0;
    cr.StatBase[ ST_REPLICATION_TIME ] = 0;
}

